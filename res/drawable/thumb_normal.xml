<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 外圈 -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#6ccc" />
        </shape>
    </item>
    <!-- 中圈 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval" >
            <solid android:color="#3c33" />
        </shape>
    </item>

    <!-- 内圈 -->
    <item
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp">
        <shape android:shape="oval" >
            <solid android:color="#cc00" />
        </shape>
    </item>

    <!-- 核 -->
    <item
        android:bottom="18dp"
        android:left="18dp"
        android:right="18dp"
        android:top="18dp">
        <shape android:shape="oval" >
            <solid android:color="#fc00" />
        </shape>
    </item>
</layer-list>
